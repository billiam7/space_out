
<% flash.each do |name, msg| %>
    <%= content_tag :div, msg, class: "alert alert-info" %>
  <% end %>


    <img class="bg" src="<%=  @daily_image_url %>" alt="nasa image of space">

    <div style="background:transparent" class="jumbotron jumbotron-fluid">
      <div style="background:transparent" class="container text-center">
        <h1 id="time" style="color:lightgrey"><%= @time %></h1>
        <div class="floating">
          <h4 class="text-center" style="color:lightgrey"><%= strip_tags  @quote %></h4>
        </div>




        <div style="background:transparent" class="container text-center">
        <a class="twitter-share-button"
        href="https://twitter.com/intent/tweet?text=<%="#{strip_tags @quote}"%>"
        data-size="large">
        <i class="fa fa-twitter fa-2x" aria-hidden="true"></i> Tweet</a>
        </div>

        </div>

    </div>


    <div style="background:transparent"  class="container jumbotron center-block clearfix">
    </div>
  <!-- Login area -->
  <div style="background:transparent " class="container text-center">


  <% if current_user %>
    <h4 style="color:lightgrey">Signed in as <%= current_user.name %> | <%= link_to "Logout", '/logout' %></h4>
  <% else %>
    <%= render "sessions/form" %>

  <% end %>
</div>



<!-- background picture title -->
<div style="background:transparent " class="container">

    <!-- Button trigger modal -->
    <!-- Music player -->
    <div style="background:transparent" class="container pull-right">
      <iframe class="pull-right" src="https://embed.spotify.com/?uri=spotify:user:t1310:playlist:5MVfrynGEanhTozPba4OcK" width="300" height="80" frameborder="0" allowtransparency="true"></iframe>
    </div>
    <div class="row force-to-bottom">
    <div style="background:transparent " style="position:absolute;bottom:5px;right:5px;margin:0;padding:5px 3px;" class="container pull-left">
      <p style="color:lightgrey"><%= strip_tags @title %></p>
    </div>
</div>
</div>
<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Sign Up</h4>
      </div>
      <div class="modal-body">
        <%= render partial: './users/new'%>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
