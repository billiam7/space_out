<div class="login-forms col-md-4 col-md-offset-4">
<!-- <div class="login-forms col-md-6 col-md-offset-3"> -->

<h1>Login</h1>

<%= form_tag '/login' do %>

  <div class="form-group">
    <!-- <%= label_tag :email %> -->
    <%= text_field_tag(:email, nil, placeholder:"email@example.com") %>
    <%#= placeholder :email@example.com %>

  </div>

  <div class="form-group">
  <%= password_field_tag(:password, nil, placeholder:"password") %>
  </div>



  <div class="home-login">

    <%= submit_tag "Log In" %>


    <button type="button" class="btn btn-sm btn-success" data-toggle="modal" data-target="#myModal">
      Sign up
    </button>



  </div>
<% end %>
</div>
